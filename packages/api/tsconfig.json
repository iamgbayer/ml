{
  "compilerOptions": {
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node", "jest"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}